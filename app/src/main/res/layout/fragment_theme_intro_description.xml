<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemeIntroDescriptionFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gravity"
                android:textStyle="bold"
                android:id="@+id/topicNameInDescription"
                android:layout_marginLeft="10dp"
                android:layout_alignParentStart="true"
                android:textColor="#80CBC4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="is a force which tries to pull two objects toward each other. Anything which has mass also has a gravitational pull."
                android:id="@+id/topicDescriptionInDescription"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/topicNameInDescription"
                android:layout_alignParentStart="true"
                android:textColor="#FFFFFF"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's do this!"
                android:id="@+id/confirmationButton"
                android:onClick="enterThemeSelect"
                android:layout_below="@id/topicDescriptionInDescription"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_theme_intro"/>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
