<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tamu.themetry2.LevelSelectFragment">

    <!-- TODO: Update blank fragment layout -->

    <!-- regular level select -->

    <TextView
        android:id="@+id/levelText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Episode"
        android:layout_marginTop="-95dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"/>

    <ImageButton
        android:padding="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_button_chapter"
        android:id="@+id/levelSelectButton"
        android:layout_gravity="center"
        android:onClick="selectLevel"
        android:src="@drawable/white_radius"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:clickable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/missionNumber"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#80CBC4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/missionStatus"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/numberOfRecordings"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:visibility="invisible"/>

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="70dp"
        android:layout_height="10dp"
        android:id="@+id/leftWhiteBlock"
        android:src="@color/white"
        android:layout_centerVertical="true"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="10dp"
        android:layout_gravity="right"
        android:id="@+id/rightWhiteBlock"
        android:src="@color/white"
        android:layout_alignTop="@+id/leftWhiteBlock"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/starLeft"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="41dp"
        android:src="@drawable/mic_white"/>

    <ImageView
        android:id="@+id/starMiddle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="76dp"
        android:src="@drawable/mic_white"/>

    <ImageView
        android:id="@+id/starRight"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="111dp"
        android:src="@drawable/mic_white"/>

    <!-- confirmation screen -->

    <ImageView
        android:id="@+id/opacityFilterSelect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="#FA80CBC4"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/starSelect"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@android:drawable/presence_away"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/goalTextSelect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Goal"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="-80dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/instructionsTextSelect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Follow the mission and\nreport by recording"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="-30dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/playButtonSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play!"
        android:textAllCaps="false"
        android:onClick="selectLevel"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#80CBC4"
        android:background="@drawable/button_level_select_confirmation"
        android:visibility="invisible"/>

</RelativeLayout>
