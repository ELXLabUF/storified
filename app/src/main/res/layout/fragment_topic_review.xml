<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tamu.themetry2.TopicReviewFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gravity"
        android:textStyle="bold"
        android:id="@+id/topicNameInDescription"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:textColor="#80CBC4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="is a force which tries to pull two objects toward each other. Anything which has mass also has a gravitational pull."
        android:id="@+id/topicDescriptionInDescription"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/topicNameInDescription"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"/>

</RelativeLayout>
